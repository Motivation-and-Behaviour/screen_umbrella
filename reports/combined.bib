@Article{baradaranmahdaviAssociationSedentaryBehavior2021,
  Annote = {*},
  Author = {Baradaran Mahdavi, S. and Riahi, R. and Vahdatpour, B. and Kelishadi, R.},
  Journal = {Health Promotion Perspectives},
