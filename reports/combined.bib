  Journal = {Journal of Medical Internet Research},
  Month = {},
  Number = {8},
  Pages = {e16388},
  Title = {Relationship {{Between Depression}} and the {{Use}} of {{Mobile Technologies}} and {{Social Media Among Adolescents}}: {{Umbrella Review}}},
  Volume = {22},
